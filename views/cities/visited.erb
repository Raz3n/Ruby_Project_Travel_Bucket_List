<h1>Visited Cities</h1>

<ul>
  <li>
    <strong><a href="/cities">All Cities</a><strong>
  </li>
  <li>
    <a href="/cities/visited">Visited cities</a>
  </li>
  <li>
    <a href="/cities/notvisited">Not visited cities</a>
  </li>
</ul>

<hr>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th>Country</th>

  </tr>
  <% for city in @visited_cities %>
  <tr>
    <td><a href="/cities/<%= city.id %>"><%= city.name %></a></td>
    <td></td>
    <td><%= city.country.name %> </td>
  </tr>
  <% end %>
</table>
