  <h1> Create new city</h1>

  <form method="post" action="/cities">

    <label for="name">City name:</label>
    <input type="text" name="name" id="name"/><br>

    <label for="country"> Country name:</label>
    <input type="text" name="country_id" id="Country">
    <br>
    <input type="radio" name="visited" value="true"/>Visited city <br>
    <input type="radio" name="visited" value="false"/>Not visited city <br>

    <input type="submit" value="Add City"/>
  </form>
